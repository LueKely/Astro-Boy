---
import { Footer } from '../components/layout/Footer';
import { Image } from 'astro:assets';
import { lazy } from 'astro:schema';
interface Props {
    title?: string;
}
const { title = 'Astroboy' } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="stylesheet" href="/styles/global.css" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Bagel+Fat+One&family=Bai+Jamjuree:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <a href="/">
                <Image
                    src={'/logo.png'}
                    alt="Logo of the website"
                    height={70}
                    width={120}
                    loading="eager"
                />
            </a>
            <a href="/about">
                <Image
                    width={100}
                    height={50}
                    src={'/about.svg'}
                    alt="Logo of the website"
                    loading="eager"
                />
            </a>
        </header>
        <slot />
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;

        background-image: url('/pattern.svg'), linear-gradient(0deg, #8b939a 0%, #5b6467 100%);
        background-repeat: repeat, no-repeat;
        background-size: auto, cover;
        background-attachment: fixed;
    }
</style>
